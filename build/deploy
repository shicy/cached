#! /bin/bash

profile=$1
version=$2

if [ ! $1 ]; then
	profile="prod"
fi

if [ ! $2 ]; then
	version="1.0.3"
fi

# 转到根目录
cd ..
echo -e 目录：`pwd`

# 更新代码
echo -e "\n> 代码同步"
cd ../jcoms
echo -e pull src jcoms：`pwd`
git pull
echo -e done.

cd ../cached
echo -e pull src cached：`pwd`
git pull
echo -e done.

# 构建
echo -e "\n> 构建"
mvn clean
mvn install
mvn package -P ${profile}
echo -e done.

# 部署
echo -e "\n> 部署"
docker stop cached
docker rm cached
docker rmi shicy/cached:${version}

docker build -t shicy/cached:${version} .
docker run -itd \
    -p 12030:12030 \
    -v /mnt/logs/cached:/mnt/app/logs \
    --name cached \
    --network mynet
    --ip 172.2.2.2
    shicy/cached:${version}

echo -e "\n> 成功！！"
